@model LoginDTO
@{

    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">


    <link href="https://cdn.jsdelivr.net/npm/remixicon@2.5.0/fonts/remixicon.css" rel="stylesheet">



    <link href="~/css/login.css" rel="stylesheet" />
    <script src="~/js/login.js"></script>
    <title>Giriş</title>
</head>
<body>
    <div class="login">

        <form asp-controller="Login" asp-action="Login" class="login__form" id="login-form">
            <h1 class="login__title">Giriş Yap</h1>

            <div class="login__content">
                <div class="login__box">
                    <i class="ri-user-3-line login__icon"></i>

                    <div class="login__box-input">
                        <input asp-for="User.Username" type="text" required class="login__input" id="login-username" placeholder=" ">
                        <label asp-for="User.Username" class="login__label">Kullanıcı Adı</label>
                    </div>
                </div>

                <div class="login__box">
                    <i class="ri-lock-2-line login__icon"></i>

                    <div class="login__box-input">
                        <input asp-for="User.Password" type="password" required class="login__input" id="login-pass" placeholder=" ">
                        <label asp-for="User.Password" class="login__label">Şifre</label>
                        <i class="ri-eye-off-line login__eye" id="login-eye"></i>
                    </div>
                </div>
            </div>

            <div class="login__check">
                <div class="login__check-group">
                    <input type="checkbox" class="login__check-input" id="login-check">
                    <label for="login-check" class="login__check-label">Remember me</label>
                </div>

                <a href="#" class="login__forgot" onclick="toggleForm('forgot-password')">Forgot Password?</a>


            </div>

            <button type="submit" class="login__button" asp-area="" asp-controller="Login" asp-action="Login">Login</button>

            <p class="login__register">
                Bir Hesabınız Yok mu? <a href="#" onclick="toggleForm('register')">Kayıt Olun</a>
            </p>
        </form>

        <form asp-controller="Login" asp-action="Register" class="login__form" id="register-form" style="display: none;">
            <h1 class="login__title">Kayıt Ol</h1>

            <div class="login__content">
                <div class="login__box">
                    <i class="ri-user-3-line login__icon"></i>

                    <div class="login__box-input">
                        <input asp-for="Worker.WorkerName" type="text" required class="login__input" id="register-name" placeholder=" ">
                        <label asp-for="Worker.WorkerName" class="login__label">Ad Soyad</label>
                    </div>
                </div>



                <div class="login__box">
                    <i class="ri-user-3-line login__icon"></i>

                    <div class="login__box-input">
                        <input asp-for="UserAdd.Username" type="text" required class="login__input" id="register-username" placeholder=" ">
                        <label asp-for="UserAdd.Username" class="login__label">Kullanıcı Adı</label>
                    </div>
                </div>

                <div class="login__box">
                    <i class="ri-mail-line login__icon"></i>

                    <div class="login__box-input">
                        <input asp-for="Worker.WorkerEmail" type="email" required class="login__input" id="register-email" placeholder=" ">
                        <label asp-for="Worker.WorkerEmail" class="login__label">Email</label>
                    </div>
                </div>

                <div class="login__box">
                    <i class="ri-lock-2-line login__icon"></i>

                    <div class="login__box-input">
                        <input asp-for="UserAdd.Password" required class="login__input" id="register-password" placeholder=" ">
                        <label asp-for="UserAdd.Password" class="login__label">Şifre</label>
                        <i class="ri-eye-off-line login__eye" id="register-eye"></i>
                    </div>
                </div>

                <div class="login__box">
                    <i class="ri-lock-2-line login__icon"></i>

                    <div class="login__box-input">
                        <input type="password" required class="login__input" id="confirm-password" placeholder=" ">
                        <label for="confirm-password" class="login__label">Tekrar Şifre</label>
                        <i class="ri-eye-off-line login__eye" id="confirm-eye"></i>
                    </div>
                </div>
            </div>

            <div class="login__check">
                <div class="login__check-group">
                    <input type="checkbox" class="login__check-input" id="register-check">
                    <label for="register-check" class="login__check-label">Kullanım Şartlarını Kabul Ediyorum</label>
                </div>
            </div>

            <button type="submit" class="login__button">Kayıt Ol</button>

            <p class="login__register">
                Already have an account? <a href="#" onclick="toggleForm('login')">Login</a>
            </p>
        </form>
        <form action="" class="login__form" id="forgot-password-form" style="display: none;">
            <h1 class="login__title">Forgot Password</h1>

            <div class="login__content">
                <div class="login__box">
                    <i class="ri-mail-line login__icon"></i>

                    <div class="login__box-input">
                        <input type="email" required class="login__input" id="forgot-password-email" placeholder=" ">
                        <label for="forgot-password-email" class="login__label">Email</label>
                    </div>
                </div>
            </div>

            <button type="submit" class="login__button">Send Reset Link</button>

            <p class="login__register">
                Remembered your password? <a href="#" onclick="toggleForm('login')">Login</a>
            </p>
        </form>
    </div>


</body>
</html>